{
  "name": "css-practise",
  "version": "1.0.0",
  "description": "Personal playground for css experiments",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run httpd -s\" \"npm run watch-css -s\" \"npm run watch-postcss -s\" \"npm run watch-html -s\" \"opn http://localhost:8080\"",
    "build": "npm run build-css -s && npm run build-html -s",
    "build-css": "node-sass -o public src && postcss --use postcss-cssnext -d public public/*.css",
    "build-html": "pug -o public src",
    "watch-html": "pug -o public -w src",
    "watch-css": "node-sass -w -r -o public --source-map true --source-map-contents src",
    "watch-postcss": "postcss --u postcss-cssnext -w -d public public/*.css",
    "httpd": "http-server -c-1 -d public",
    "test": "echo \"Error: no test specified\" && exit 1",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terabaud/css-practise.git"
  },
  "author": "Lutz Rosema",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/terabaud/css-practise/issues"
  },
  "homepage": "https://github.com/terabaud/css-practise#readme",
  "devDependencies": {
    "concurrently": "^3.4.0",
    "gh-pages": "^0.12.0",
    "http-server": "^0.9.0",
    "node-sass": "^4.5.2",
    "opn-cli": "^3.1.0",
    "postcss": "^5.2.16",
    "postcss-cli": "^3.1.1",
    "postcss-cssnext": "^2.10.0",
    "pug": "^2.0.0-beta11",
    "pug-cli": "^1.0.0-alpha6"
  },
  "dependencies": {}
}
